{
  "name": "phoenix-provider",
  "version": "0.0.0-semantically-released",
  "description": "Provide phoenix socket and channel by React Context.",
  "engines": {
    "node": ">=12",
    "npm": ">=6",
    "yarn": ">=1"
  },
  "main": "./dist/index.js",
  "scripts": {
    "test": "gsmlg-scripts test",
    "test:update": "gsmlg-scripts test --updateSnapshot",
    "build": "gsmlg-scripts build && mv index.d.ts dist/index.d.ts",
    "lint": "gsmlg-scripts lint",
    "format": "gsmlg-scripts format",
    "validate": "gsmlg-scripts validate --passWithNoTests"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "phoenix",
    "react"
  ],
  "author": "Jonathan Gao <me@gsmlg.org> (https://gsmlg.com)",
  "license": "MIT",
  "dependencies": {
    "@babel/runtime": "^7.16.3",
    "phoenix": "^1.6.2"
  },
  "eslintConfig": {
    "extends": [
      "gsmlg",
      "gsmlg/jest"
    ],
    "rules": {
      "no-process-exit": "off",
      "import/no-dynamic-require": "off",
      "import/no-unassigned-import": "off",
      "no-console": "off",
      "no-nested-ternary": "off",
      "no-useless-catch": "off"
    }
  },
  "eslintIgnore": [
    "node_modules",
    "coverage",
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/gsmlg-dev/Foundation"
  },
  "bugs": {
    "url": "https://github.com/gsmlg-dev/Foundation/issues"
  },
  "homepage": "https://github.com/gsmlg-dev/Foundation/tree/master/nodejs/packages/phoenix-provider#readme",
  "publishConfig": {
    "access": "public"
  },
  "devDependencies": {
    "@gsmlg/scripts": "^1.7.1"
  },
  "peerDependencies": {
    "react": "^17.0.2"
  }
}
